<div class="row justify-space-between-md">
  <div class="login-form">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="email-login" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="password-login" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="button btn-primary" type="submit">Login</button>
      </div>
    </form>
    <a href="/signup">New user? Sign Up.</a>
  </div>
</div>

<script src="/javascript/login.js"></script>